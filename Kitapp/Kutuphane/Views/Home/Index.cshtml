
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="bg-primary">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">

                <img class="d-block w-100" src="~/Content/book-images/1.Slider-min.png" width="150" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/book-images/2.Slider-min.png" width="150" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/book-images/3.Slider-min.png" width="150" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<div class="container">
    @Html.Action("Books", "Home")

    @Html.Action("Exchangehome", "Product")
</div>


<section class="ftco-section">

    <div class="container">
        <div class="row">



            <div class="col-md-6">
                <h1 style="font-family:Montserrat;">Kitapp Web Application </h1>
                <p>
                    It's a Library. It's a smart social networking site. It's a celebration of literature and a place where books get new life. Kitapp is the act of giving a book a unique identity so, as the book is passed from reader to reader, it can be tracked and thus connecting its readers.
                    <br />The books can come into your hands first directly from the shelf, with their unique fragrances. We are a platform that will help you download the book if  you want as an e-book for free.
                </p>
                <hr />

                <blockquote style="margin:2em;font-style:italic;">
                    “A book is not only a friend, it makes friends for you.  When you have possessed a book with mind and spirit,  you are enriched. But when you pass it on you are enriched threefold.”<br><br>

                    <p class="right">
                        — Henry Miller<br>
                        The Books In My Life (1969)
                    </p>
                </blockquote>

            </div>

            <div class="col-md-6">
                <img src="~/Content/book-images/About.png" class="d-block mx-lg-auto img-fluid" alt="Kitapp" width="380" height="350" loading="lazy">
            </div>

        </div>

    </div>


</section>

<section class="ftco-section">

    <div class="container" align="center">
        <h1 class="display-5 fw-bold lh-1 mb-3" style="font-family:Montserrat;">Dowload Our App </h1>
        <hr />
        <div class="row">



            <div class="col-md-6">
                <h3 class="display-5 fw-bold lh-1 mb-3" style="font-family:Montserrat;">On Google Play </h3>

                <img src="~/Content/book-images/GooglePlay.png" class="d-block mx-lg-auto img-fluid" alt="Kitapp" loading="lazy">


            </div>

            <div class="col-md-6">
                <h3 class="display-5 fw-bold lh-1 mb-3" style="font-family:Montserrat;">On App Store </h3>

                <img src="~/Content/book-images/AppStore.png" class="d-block mx-lg-auto img-fluid" alt="Kitapp" loading="lazy">
            </div>

        </div>

    </div>


</section>