@using Kutuphane.Models.Siniflar
@model List<Kitaplar>

@{
    ViewBag.Title = "Productdetails";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<section class="ftco-section">
    <div class="container">

        @foreach (var x in Model)
        {


            <div class="row">
                <div class="col-lg-6 mb-5 ftco-animate fadeInUp ftco-animated">
                    <a href="images/prod-1.jpg" ><img src="@x.BookImage" style="width:500px;"></a>
                </div>
                <div class="col-lg-6 product-details pl-md-5 ftco-animate fadeInUp ftco-animated">
                    <h3>@x.BookName</h3>
                    <div class="rating d-flex">
                        
                        <p class="text-left mr-4">
                            <a href="#" class="mr-2" style="color: #000;">@x.PageNumber Page </a>
                        </p>
                        <p class="text-left">
                            <a href="#" class="mr-2" style="color: #000;">Writer :  @x.Writer</a>
                        </p>
                    </div>
                    <p class="price"><span>@x.Price ₺</span></p>
                    <p>@x.Summary</p>
                    
                    <div class="row mt-4">
                        
                        <div class="w-100"></div>
                        <div class="col-md-12">
                           
                        </div>
                    </div>
                    <p>
                    <a href="/Product/Exchange" class="btn btn-primary py-3 px-5 mr-2">Look for exchange</a>
                    <a href="/Checkout/Index/@x.BookID" class="btn btn-primary py-3 px-5">Buy now</a>
                    </p>
                </div>
            </div>
        }

        <div class="row mt-5">
            <div class="col-md-12 nav-link-wrap">
                <div class="nav nav-pills d-flex text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">


                    <a class="nav-link ftco-animate fadeInUp ftco-animated" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false">Reviews</a>

                </div>
            </div>
            <div class="col-md-12 tab-wrap">

              
                    <div class="tab-pane fade" id="v-pills-3" role="tabpanel" aria-labelledby="v-pills-day-3-tab">
                        <div class="row p-4">
                            <div class="col-md-7">
                                <h3 class="mb-4">23 Reviews</h3>
                                <div class="review">
                                    <div class="user-img" style="background-image: url(/Content/Kitapp/images/person_1.jpg)"></div>
                                    <div class="desc">
                                        <h4>
                                            <span class="text-left">Oruç Han Kural</span>
                                            <span class="text-right">25 May 2021</span>
                                        </h4>
                                        <p class="star">
                                            <span>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </span>
                                            <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                                        </p>
                                        <p>I buyed this book its amanzing!</p>
                                    </div>
                                </div>
                            
                            </div>
                            <div class="col-md-4">
                                <div class="rating-wrap">
                                    <h3 class="mb-4">Give a Review</h3>
                                    <p class="star">
                                        <span>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            (98%)
                                        </span>
                                        <span>1 Reviews</span>
                                    </p>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

